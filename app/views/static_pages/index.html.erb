<table id="columns">
  <tbody><tr>
    <td id="main">
      <p id="headline">Connect with friends and the
world around you on Facebook.</p>
      <ul id="slogan">
        <li id="what"><p>See updates<br>from friends</p></li>
        <li id="who"><p>Share what's new<br>Realtime update</p></li>
        <li id="how"><p>Connect<br>Gmail / MSN / FB</p></li>
      </ul>
      <p id="get-started"><a href="http://fanfou.com/register">注册</a></p>
    </td>
    <td id="sidebar">
      <div class="sect first-sect">
        <h2>登录</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <p>
            <label class="label_input" for="loginname">Username or Email：</label>
            <%= f.text_field :login, class: "input_text"%>
          </p>
          <p class="inputting">
            <label class="label_input" for="loginpass">Password：</label>
            <%= f.password_field :password, class: "input_text"%>
          </p>
              <p>
            <label class="label_check" for="autologin">
              <%= f.check_box :remember_me %>
              Remember me?
            </label>
          </p>
          <p class="act">
            <%= f.submit '忘记密', class: "formbutton" %>
            <%= link_to "Forgot password?", new_password_path(:user) %>
          </p>
        <% end %>
      </div>
    </td>
  </tr>
</tbody>
</table>
