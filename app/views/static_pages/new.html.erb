<div class="registration-pages">
   <div class="registration-container">
      <h2>Registration</h2>
      <%= render 'partials/devise_form_errors' %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         <div class="email ">
            <label class="label_input" for="email">Email</label>
            <%= f.text_field :email, class: "input_text" %>
            <span id="email-hint" class="">&nbsp;</span>
            <span class="hint">Use a valid email</span>
         </div>
         <p class="">
            <label class="label_input" for="realname">Full Name</label>
            <%= f.text_field :name, class: "input_text" %>
            <span id="realname-hint">&nbsp;</span>
            <span class="hint">You can use the real name</span>
         </p>
         <p class="">
            <label class="label_input" for="loginpass">Username</label>
            <%= f.text_field :username, class: "input_text" %>
            <span id="loginpass-hint">&nbsp;</span>
            <span class="hint">Minimum 4 characters</span>
         </p>
         <p class="">
            <label class="label_input" for="verifypass">Password</label>
            <%= f.password_field :password, class: "input_text" %>
            <span id="verifypass-hint">&nbsp;</span>
            <span class="hint">Minimum 8 characters</span>
         </p>
         <p class="act">
            <input type="hidden" name="token" value="85a6e27c">
            <input type="hidden" name="action" value="register">
            <span>Clicking the following registration button is deemed to be your agreement <a href="#">Terms and Agreement</a></span><br>
            <%= f.submit 'Sign up', class: "signup-submit" %>
         </p>
      <% end %>
      <div id="sign-bottom">
         <p>Already have an account? <%= link_to "Login", root_url() %></p>
      </div>
   </div>
</div>